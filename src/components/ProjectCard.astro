---
import Icon from "astro-icon";

export interface Props {
  imagePath: string;
  imageAltText: string;
  title: string;
  description: string;
  builtWith: string[];
  githubURL: string;
  liveURL?: string;
}

const {
  imagePath,
  imageAltText,
  title,
  description,
  builtWith,
  githubURL,
  liveURL,
} = Astro.props;
---
<!-- TODO: add hover for image, and onclick to go to live site -->
<article class="project-card">
  <div class="preview"><img src={imagePath} alt={imageAltText} /></div>
  <div class="info">
    <div class="text">
        <div class="title">{title}</div>
        <div class="built-with">
          <span>Built With:</span>
          {
            builtWith.reduce(
              (prev, curr, index, arr) =>
                index < arr.length - 1 ? prev + curr + ", " : prev.concat(curr),
              ""
            )
          }
        </div>
        <div class="description">{description}</div>
    </div>
    <div class="links">
      <a href={githubURL}>
        <Icon name="mdi:github" />
      </a>
      {
        liveURL && (
          <a href={liveURL}>
            <Icon name="ci:external-link" />
          </a>
        )
      }
    </div>
  </div>
</article>

<style>
  .project-card {
    display: flex;
    gap: 2rem;
    justify-content: center;
  }

  .preview {
    width: 640px; 
    height: 360px;
  }

  .preview img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border: 1px solid var(--border-shade);
    border-radius: 10px;
  }

  .info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .title {
    color: var(--text-shade-1);
    font-size: var(--heading-3-size);
    font-weight: var(--heading-3-weight);
  }

  .built-with {
    color: var(--text-shade-2);
    font-size: var(--paragraph-size);
    font-weight: var(--paragraph-weight);
    max-width: 55ch;
  }

  .built-with > span {
    font-size: var(--heading-6-size);
    font-weight: var(--heading-6-weight);
  }

  .description {
    color: var(--text-shade-4);
    font-size: var(--heading-6-size);
    font-weight: var(--heading-6-weight);
    max-width: 40ch;
  }

  .links svg {
    color: var(--icon-colour);
  }

  .links a {
    margin-right: 1rem;
  }

  @media screen and (max-width: 1040px) {
    .project-card {
      flex-direction: column;
    }

    .preview {
        width: 100%;
    }

    .title {
        font-size: var(--heading-5-size);
    }

    .built-with {
        max-width: 100%;
    }

    .description {
        font-size: var(--paragraph-size);
        max-width: 100%;
    }

    .info {
        gap: 2rem;
    }

    .links {

    }
  }
</style>
